@import "./detail.skeleton.wxss";

.scroll {
  width: 100vw;
  height: 100vh;
  background-color: #f2f2f2;
}

.swiper {
  width: 750rpx;
  height: 750rpx;
  background-color: #fff;
}

.swiper .simg {
  width: 750rpx;
  height: 750rpx;
}

.content {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
}

.content .price {
  display: flex;
  align-items: baseline;
  color: red;
  font-size: 30px;
  font-weight: bold;
}

.price .t {
  font-size: 12px;
  font-weight: lighter;
  margin-right: 10rpx;
}

.title {
  font-size: 32rpx;
}

.tips {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 14px;
}

.tip {
  display: flex;
  align-items: baseline;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-bottom: 1px solid #eee;
}

.tips .txt {
  margin-left: 20rpx;
  color: #999;
  font-size: 12px;
}

.touch-view {
  width: 100%;
}

.goods-pics .title {
  display: flex;
  margin: 20rpx 0;
  justify-content: center;
  font-size: 18px;
}

.touch-view .img {
  width: 100vw;
  display: block;
}


.bar {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  position: fixed;
  bottom: 0;
  z-index: 100;
  border-top: 1px solid #eee;
}

.bar .co {
  display: flex;
  padding: 20rpx 30rpx 30rpx 30rpx;
}

.bar .right {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.right .share {
  text-align: center;
  width: 300rpx;
  border-radius: 50rpx;
  padding: 20rpx 0;
  background-color: #fff;
  color: var(--primary-color);
  line-height: 30rpx;
  border: 1rpx solid var(--primary-color);
}

.right .buy {
  text-align: center;
  width: 300rpx;
  border-radius: 50rpx;
  background: var(--primary-color);
  padding: 20rpx 0;
  color: #fff;
  margin-left: 10rpx;
  line-height: 30rpx;
}

.right .buy1 {
  text-align: center;
  width: 300rpx;
  border-radius: 50rpx;
  background: var(--primary-color);
  padding: 20rpx 0;
  color: #fff;
  margin-left: 10rpx;
  line-height: 30rpx;
}

.buy1 .buy-store {
  width: 300rpx;
  height: 140rpx;
  position: absolute;
  opacity: 0;
  top: 0;
}

.store-product {
  position: relative;
  line-height: 140rpx;
}

.bar .left {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  width: 60rpx;
  font-size: 12px;
  color: #333;
  margin-right: 10rpx;
}

.intro {
  width: 750rpx;
  height: 1334rpx;
  position: fixed;
  left: -750rpx;
}

.intro .bg {
  width: 750rpx;
  height: 1334rpx;
  position: relative;
}

.haibao {
  position: absolute;
  padding: 160rpx 70rpx 0 80rpx;
  top: 0;
}

.haibao .title {
  width: 600rpx;
}

.haibao .price {
  display: flex;
  align-items: baseline;
  color: red;
  font-size: 30px;
  font-weight: bold;
}

.haibao .price .t {
  font-size: 12px;
  font-weight: lighter;
  margin-right: 10rpx;
}

.haibao .img {
  margin-top: 30rpx;
  width: 600rpx;
}

.haibao .qr {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 1100rpx;
  right: 100rpx;
}

.bind-popup {
  width: 500rpx;
  padding: 30rpx 40rpx 40rpx 40rpx;
  font-size: 14px;
}

.bind-popup .bind-title {
  margin: 20rpx 0;
  text-align: center;
  font-size: 16px;
  font-weight: bolder;
}

.bind-popup .bind-btn {
  text-align: center;
  width: 230rpx;
  border-radius: 50rpx;
  background: var(--primary-color);
  padding: 10rpx 0;
  color: #fff;
  margin: 30rpx auto 0 auto;
}

.gray {
  color: gray;
}

.t-popup__close .t-icon {
  font-size: 20px !important;
}

.wenan {
  display: flex;
  flex-direction: column;
  min-height: 100rpx;
  background-color: #eee;
  white-space: pre-wrap;
  padding: 20rpx;
}

.copy_c {
  display: flex;
  justify-content: flex-end;
}

.copy {
  background-color: rgb(182, 198, 250);
  color: blue;
  font-size: 12px;
  width: 100rpx;
  text-align: center;
  border-radius: 50rpx;
}

.btn {
  text-align: center;
  width: 200rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #007bff, #78b2fd);
  padding: 10rpx 50rpx;
  color: #fff;
  margin: 30rpx auto 0 auto;
}