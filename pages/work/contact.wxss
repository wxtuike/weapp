.top {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #07c160 0%, #ffffff 100%);
}

.list {
  width: 100vw;
  height: 100vh;
}

.header {
  padding: 160rpx 40rpx 10rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header .txt {
  font-size: 18px;
  color: white;
}

.header .img {
  width: 200rpx;
  height: 200rpx;
  margin-left: 50rpx;
}

.box {
  border-radius: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
  padding: 40rpx 30rpx;
}

.box .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.title .ti {
  margin-left: 10rpx;
}

.box .con {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.con .txt {
  width: 580rpx;
  font-size: 14px;
  color: #666;
}

.con .icon {
  color: #07c160;
}

.t-popup {
  background: linear-gradient(180deg, #07c160 0%, #ffffff 100%);
  width: 600rpx;
  height: 800rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.t-popup .qrimg {
  width: 500rpx;
  height: 600rpx;
  margin: 10rpx 0;
}

.t-popup .ptitle {
  font-size: 18px;
  color: white;
}

.t-popup .ptxt {
  font-size: 14px;
  color: #666;
}