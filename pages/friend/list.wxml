<nav-bar title="{{title}}" background="{{navbar_background}}" color="{{'#ffffff'}}"></nav-bar>
<view class="top">
  <view style="height: 100px;"></view>
  <view class="header">
    <view class="con">
      <view class="num">{{count}}</view>
      <view>粉丝数</view>
    </view>
    <view class="line"></view>
    <view class="con">
      <view class="num">{{count1}}</view>
      <view>授权推客</view>
    </view>
  </view>
  <view class="list">
    <view class="title">我的好友</view>
    <view class="empty" wx:if="{{ list.length==0 }}">暂无数据</view>
    <view class="item" wx:key="idx" wx:for-index="orderIndex" wx:for-item="item" wx:for="{{list}}">
      <image class="img" src="{{item.head_img_url}}" mode="aspectFill"></image>
      <view class="user">
        <view class="name">{{item.nickname}}<text class="role">{{item.role_name}}</text></view>
        <view class="code">邀请码：{{item.code}}</view>
        <view>注册时间：{{item.create_at}}</view>
      </view>
    </view>
  </view>
</view>