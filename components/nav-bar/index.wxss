.bar-bg {
  position: fixed;
  z-index: 99;
}

.bar-btn {
  position: fixed;
  display: flex;
  border-radius: 50rpx;
  justify-content: center;
  align-items: center;
  margin-left: 7px;
  background-color: rgba(0, 0, 0, 0.3);
  color: white;
  z-index: 102;
}

.bar-btn .back {
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.bar-btn .home {
  padding-right: 30rpx;
  padding-left: 20rpx;
}

.bar-btn .line {
  border-left: 1px solid #ffffff;
  height: 20rpx;
}

.bar-title {
  position: fixed;
  display: flex;
  width: 100vw;
  justify-content: center;
  align-items: center;
  z-index: 101;
}